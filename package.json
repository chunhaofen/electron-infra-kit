{
  "name": "electron-infra-kit",
  "version": "0.1.1",
  "description": "A comprehensive infrastructure kit for Electron applications, featuring a robust window manager with state persistence, inter-window communication, and full TypeScript support.",
  "sideEffects": false,
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "author": "chunhao",
  "license": "MIT",
  "keywords": [
    "electron",
    "window-manager",
    "ipc",
    "typescript",
    "state-management",
    "message-bus"
  ],
  "homepage": "https://github.com/chunhaofen/electron-infra-kit#readme",
  "bugs": {
    "url": "https://github.com/chunhaofen/electron-infra-kit/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chunhaofen/electron-infra-kit.git"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./core/window": {
      "import": "./dist/core/window/index.mjs",
      "require": "./dist/core/window/index.js",
      "types": "./dist/core/window/index.d.ts"
    },
    "./core/ipc": {
      "import": "./dist/core/ipc/index.mjs",
      "require": "./dist/core/ipc/index.js",
      "types": "./dist/core/ipc/index.d.ts"
    },
    "./core/ipc/transport": {
      "import": "./dist/core/ipc/transport/index.mjs",
      "require": "./dist/core/ipc/transport/index.js",
      "types": "./dist/core/ipc/transport/index.d.ts"
    },
    "./core/message-bus": {
      "import": "./dist/core/message-bus/index.mjs",
      "require": "./dist/core/message-bus/index.js",
      "types": "./dist/core/message-bus/index.d.ts"
    },
    "./preload": {
      "import": "./dist/preload/index.mjs",
      "require": "./dist/preload/index.js",
      "types": "./dist/preload/index.d.ts"
    },
    "./infrastructure/logger": {
      "import": "./dist/infrastructure/logger/index.mjs",
      "require": "./dist/infrastructure/logger/index.js",
      "types": "./dist/infrastructure/logger/index.d.ts"
    },
    "./infrastructure/errors": {
      "import": "./dist/infrastructure/errors/index.mjs",
      "require": "./dist/infrastructure/errors/index.js",
      "types": "./dist/infrastructure/errors/index.d.ts"
    },
    "./infrastructure/debug": {
      "import": "./dist/infrastructure/debug/index.mjs",
      "require": "./dist/infrastructure/debug/index.js",
      "types": "./dist/infrastructure/debug/index.d.ts"
    },
    "./types": {
      "import": "./dist/types.mjs",
      "require": "./dist/types.js",
      "types": "./dist/types.d.ts"
    }
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "build:vite": "vite build",
    "dev:vite": "vite build --watch",
    "prepublishOnly": "npm run build",
    "docs": "typedoc",
    "lint": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "release": "standard-version",
    "release:patch": "standard-version --release-as patch",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:dry": "standard-version --dry-run"
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "electron": ">=22.0.0"
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "tiny-typed-emitter": "^2.1.0",
    "uuid": "^9.0.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^6.0.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/node": "^22.0.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "electron": "^25.0.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "ghooks": "^2.0.4",
    "prettier": "^3.1.0",
    "rollup": "^4.53.3",
    "rollup-plugin-dts": "^6.3.0",
    "standard-version": "^9.5.0",
    "tslib": "^2.8.1",
    "typedoc": "^0.28.15",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.0.0",
    "validate-commit-msg": "^2.14.0",
    "vite": "^4.0.0",
    "vite-plugin-dts": "^3.0.0"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "config": {
    "ghooks": {
      "commit-msg": "validate-commit-msg",
      "pre-commit": "pnpm run lint && pnpm run format"
    }
  }
}
